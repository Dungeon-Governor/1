{>load}
<div class="form-group">
    <label for="{{panel_id}}_archetype">Archetype Id</label>
    <select id="{{panel_id}}_archetype" class="form-control" id="selectArchetypeId">
        {{#each archetypes}}
        <option value="{{archetypeId}}">{{archetypeId}}</option>
        {{/each}}
    </select>
</div>

{>specialize}
<div class="form-group">
    <label for="{{panel_id}}_parent">Parent Archetype Id</label>
    <select id="{{panel_id}}_parent" class="form-control" id="selectArchetypeId">
        {{#each archetypes}}
            <option value="{{archetypeId}}">{{archetypeId}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label for="{{panel_id}}_specialized">Specialized Archetype Id</label>
    <input id="{{panel_id}}_specialized" type="text" class="form-control input-sm">
</div>

{>create}
<div class="form-horizontal">
    <div class="form-group">
        <label for="{{panel_id}}_rm_type" class="control-label col-sm-6">Rm Type</label>
        <div class="col-sm-6">
            <select id="{{panel_id}}_rm_type" class="form-control input-sm"></select>
        </div>
    </div>
    <div class="form-group">
        <label for="{{panel_id}}_concept" class="control-label col-sm-6">Concept</label>
        <div class="col-sm-6">
            <input id="{{panel_id}}_concept" class="form-control input-sm" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="{{panel_id}}_version" class="control-label col-sm-6">Version</label>
        <div class="col-sm-6">
            <input id="{{panel_id}}_version" class="form-control input-sm" value="1.0.0">
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Archetype Id</h3>
        </div>
        <div class="panel-body">
            <p id="{{panel_id}}_archetype_id" class="form-control-static"></p>
        </div>
    </div>
    <div class="form-group">
        <label for="{{panel_id}}_language" class="control-label col-sm-6">Original Language</label>
        <div class="col-sm-6">
            <input id="{{panel_id}}_language" class="form-control input-sm" value="en">
        </div>
    </div>
</div>



