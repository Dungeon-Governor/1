{>addNew}
<div class="form-group">
    <label for="{{id}}_text">Text</label>
    <input id="{{id}}_text" class="form-control" value="">
</div>
<div class="form-group">
    <label for="{{id}}_description">Description</label>
    <input id="{{id}}_description" class="form-control" value="">
</div>

{>addExistingTermsDialog}
<div class="form-group">
    <label for="selectExistingTerms">Select terms to add</label>
    <select id="selectExistingTerms" class="form-control" size="10" multiple>
        {{#each terms}}
            <option value="{{@key}}" title="{{@key}}: {{description}}">{{text}}</option>
        {{/each}}
    </select>
</div>
