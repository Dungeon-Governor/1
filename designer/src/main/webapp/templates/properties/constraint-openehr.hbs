{>DV_QUANTITY}
<div class="row">
    <label for="{{units_id}}">Units</label>

    {{#if isTemplate}}
        <div class="row">
            <div class="col-sm-6">
                <select id="{{units_id}}" class="form-control input-sm">
                </select>
            </div>
            <div id="{{panel_id}}_active_units_container" class="col-sm-6"></div>
        </div>
    {{else}}
        <div class="input-group">
            <select id="{{units_id}}" class="form-control input-sm">
            </select>
            <span class="input-group-btn">
                <button id="{{units_id}}_remove" class="btn btn-default data">-</button>
            </span>
            <span class="input-group-btn">
                <button id="{{units_id}}_add" class="btn btn-default data">+</button>
            </span>
        </div>
    {{/if}}
</div>
{{#each unit_panels}}
    <div class="row unit_panel" id="{{panel_id}}">
        <div id="{{magnitude.panel_id}}"></div>
        <div class="form-horizontal">
            <div class="form-group">
                <label for="{{panel_id}}_precision" class="col-sm-4 control-label">Limit decimal places</label>

                <div class="col-sm-8">
                    <input id="{{panel_id}}_precision" type="number" class="form-control input-sm data archetype-only"
                           value="{{precision}}">
                </div>
            </div>
        </div>
    </div>
{{/each}}

{>DV_CODED_TEXT}
<div>
    <div class="checkbox">
        <label>
            <input id="{{panel_id}}_coded_text" type="checkbox" class="data">Coded text
        </label>
    </div>
    <div id="{{defining_code.panel_id}}"></div>
</div>

{>DV_BOOLEAN}
<div>
    <div id="{{value.panel_id}}">
    </div>
</div>

{>DV_COUNT}
<div>
    <div id="{{magnitude.panel_id}}">
    </div>
</div>

{>DV_ORDINAL}
<div>
    {{#if isParentConstrained}}
        <div id="{{panel_id}}_ordinal_checkbox_container"></div>
    {{else}}
        <div class="table-layout">
            <div class="table-cell vertical-button-column">
                <div class="btn-group-vertical" role="group">
                    <button id="{{panel_id}}_add_new_value" type="button" class="btn btn-default data archetype-only"
                            title="add new value">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                    <button id="{{panel_id}}_remove_value" type="button" class="btn btn-default data archetype-only"
                            title="remove">
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>

                    <button id="{{panel_id}}_add_existing_value" type="button"
                            class="btn btn-default data archetype-only"
                            title="add existing value">
                        <span class="glyphicon glyphicon-edit"></span>
                    </button>
                    <button id="{{panel_id}}_edit_value" type="button" class="btn btn-default data  archetype-only"
                            title="edit">
                        <span class="glyphicon glyphicon-wrench"></span>
                    </button>
                </div>
            </div>
            <div class="table-cell">
                <select id="{{panel_id}}_values" class="form-control data" size="10">
                </select>
            </div>
        </div>
    {{/if}}
</div>

{>DV_ORDINAL/editValue}
<div class="form-group">
    <div class="col-sm-6">
        <label for="{{id}}_value">Ordinal value</label>
    </div>
    <div class="col-sm-6">
        <input id="{{id}}_value" class="form-control" type="number" value="{{value.value}}">
    </div>
</div>
<div class="form-group">
    <label for="{{id}}_text">Text</label>

    <p id="{{id}}_text" class="form-control-static">{{value.term.text}}</p>
</div>
<div class="form-group">
    <label for="{{id}}_description">Description</label>

    <p id="{{id}}_description" class="form-control-static">{{value.term.description}}</p>
</div>

{>DV_DURATION}
<div>
    <div id="{{value.panel_id}}">
    </div>
</div>

{>DV_IDENTIFIER}
<div>
    <div class="form-group">
        <label for="{{panel_id}}_issuer">Issuer</label>
        <input id="{{panel_id}}_issuer" type="text" class="form-control input-sm data archetype-only" value="{{issuerPattern}}"/>
    </div>
    <div class="form-group">
        <label for="{{panel_id}}_type">Type</label>
        <input id="{{panel_id}}_type" type="text" class="form-control input-sm data archetype-only" value="{{typePattern}}"/>
    </div>
    <div class="form-group">
        <label for="{{panel_id}}_assigner">Assigner</label>
        <input id="{{panel_id}}_assigner" type="text" class="form-control input-sm data archetype-only" value="{{assignerPattern}}"/>
    </div>
</div>

{>DV_DATE_TIME}
<div>
    <div id="{{value.panel_id}}">
    </div>
</div>

{>DV_PROPORTION}
<div>
    <div class="row form-group">
        <div class="col-sm-6">
            <label for="{{panel_id}}_integral">As percent</label>
        </div>
        <div class="col-sm-6">
            <select id="{{panel_id}}_integral" class="form-control input-sm data archetype-only">
                <option value=""></option>
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-6">
            <label for="{{panel_id}}_kinds">Proportion kinds</label>
        </div>
        <div id="{{panel_id}}_kinds_panel" class="col-sm-6">
            <div class="col-sm-12">
                <input id="{{panel_id}}_kind_ratio" type="checkbox" class="data archetype-only">Ratio
            </div>
            <div class="col-sm-12">
                <input id="{{panel_id}}_kind_unitary" type="checkbox" class="data  archetype-only">Unitary
            </div>
            <div class="col-sm-12">
                <input id="{{panel_id}}_kind_percent" type="checkbox" class="data  archetype-only">Percent
            </div>
            <div class="col-sm-12">
                <input id="{{panel_id}}_kind_fraction" type="checkbox" class="data  archetype-only">Fraction
            </div>
            <div class="col-sm-12">
                <input id="{{panel_id}}_kind_integer_fraction" type="checkbox" class="data  archetype-only">Integer
                Fraction
            </div>
        </div>
    </div>
    <div id="{{panel_id}}_tabs" role="tabpanel">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#{{numerator.panel_id}}" role="tab" data-toggle="tab">Numerator</a>
            </li>
            <li role="presentation"><a href="#{{denominator.panel_id}}" role="tab" data-toggle="tab">Denominator</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="{{numerator.panel_id}}">
            </div>
            <div role="tabpanel" class="tab-pane" id="{{denominator.panel_id}}">
            </div>
        </div>

    </div>
</div>

{>DV_INTERVAL}
<div id="{{panel_id}}_tabs" role="tabpanel">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#{{lower.panel_id}}" role="tab" data-toggle="tab">Lower</a>
        </li>
        <li role="presentation"><a href="#{{upper.panel_id}}" role="tab" data-toggle="tab">Upper</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="{{lower.panel_id}}">
        </div>
        <div role="tabpanel" class="tab-pane" id="{{upper.panel_id}}">
        </div>
    </div>

</div>

{>ELEMENT}
<div>
    {{#if isTemplateChoice}}
        <div id="{{panel_id}}_active_dv_container"></div>
    {{else}}
        <div class="form-horizontal">
            <div class="form-group">
                <label for="{{panel_id}}_type" class="col-sm-2 control-label">Type</label>

                <div class="col-sm-10 input-group">
                    <select id="{{panel_id}}_type" class="form-control input-sm">
                    </select>
                    {{#unless isTemplate}}
                        <span class="input-group-btn">
                            <button id="{{panel_id}}_addType" type="button" class="btn btn-default data"
                                    title="add new value">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                        <span class="input-group-btn">
                            <button id="{{panel_id}}_removeType" type="button" class="btn btn-default data"
                                    title="removes current type">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                    {{/unless}}
                </div>

            </div>
        </div>

        <div id="{{panel_id}}_valueContainer" class="row">
        </div>
    {{/if}}

</div>

{>ELEMENT/addDataValue}
<div class="form-horizontal">
    <div class="form-group">
        <label for="{{panel_id}}_dataValues" class="col-sm-4 control-label">Type</label>

        <div class="col-sm-8">
            <select id="{{panel_id}}_dataValues" class="form-control input-sm data"></select>
        </div>
    </div>
</div>

