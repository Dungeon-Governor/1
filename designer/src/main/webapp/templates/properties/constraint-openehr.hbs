{>DV_QUANTITY}
<div>
    <label for="{{units_id}}">Units</label>

    <div class="table-layout">
        <div class="table-cell">
            <select id="{{units_id}}" class="form-control input-sm">
                {{#each unit_panels}}
                <option value="{{panel_id}}">{{units}}</option>
                {{/each}}
            </select>
        </div>
        <div class="table-cell right">
            <button id="{{units_id}}_remove" class="btn btn-default">-</button>
            <button id="{{units_id}}_add" class="btn btn-default">+</button>
        </div>
    </div>
    {{#each unit_panels}}
    <div class="unit_panel" id="{{panel_id}}">
        <div id="{{magnitude.panel_id}}"></div>
        <label for="{{precision.id}}_value">Limit decimal places</label>

        <div class="input-group">
              <span class="input-group-addon">
                  <input id="{{precision.id}}_enabled" type="checkbox">
              </span>
            <input id="{{precision.id}}_value" type="number" class="form-control input-sm" value="{{precision.value}}">
        </div>
    </div>
    {{/each}}
</div>
