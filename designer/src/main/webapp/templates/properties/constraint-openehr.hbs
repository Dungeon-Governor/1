{>DV_QUANTITY}
<div>
    <label for="{{units_id}}">Units</label>

    <div class="table-layout">
        <div class="table-cell">
            <select id="{{units_id}}" class="form-control input-sm">
                {{#each unit_panels}}
                <option value="{{panel_id}}">{{units}}</option>
                {{/each}}
            </select>
        </div>
        <div class="table-cell right">
            <button class="btn btn-default">-</button>
            <button class="btn btn-default">+</button>
        </div>
    </div>
    {{#each unit_panels}}
    <div class="unit_panel" id="{{panel_id}}">
        <fieldset>
            <legend>magnitude</legend>
            <div id="{{magnitude.panel_id}}"></div>
        </fieldset>
    </div>
    {{/each}}
</div>
