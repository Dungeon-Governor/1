{>bindings}
<div>
    <div class="form-horizontal row">
        <div class="form-group">
            <label for="{{panel_id}}_terminology" class="col-sm-3 control-label">Terminology</label>
            <div class="col-sm-9">
                <select class="form-control" id="{{panel_id}}_terminology"></select>
            </div>
        </div>
    </div>
    <div class="row">

    </div>
</div>
